<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="667.0" prefWidth="375.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.uab.wmeeks.qr_gui.QR_errorController">
    <children>
        <Label prefHeight="156.0" prefWidth="316.0" text="QR Code Generation Unsuccessful" textAlignment="CENTER" textFill="#008aff" wrapText="true">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Label prefHeight="50.0" prefWidth="258.0" text="Error: Invalid URL Detected" textFill="RED" wrapText="true">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label prefHeight="50.0" prefWidth="314.0" text="Please either return to the menu or use the help and gallery function" textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Accordion />
        <Button fx:id="primaryButton" onAction="#switchToMenu" prefHeight="72.0" prefWidth="225.0" text="Return to Menu">
            <font>
                <Font size="17.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#switchToGallery" prefHeight="39.0" prefWidth="213.0" text="Gallery">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#switchToHelp" prefHeight="39.0" prefWidth="206.0" text="Help">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
